<div class="jumbotron" style="background-image: url(<%= @count.img %>)">

  <div class="container">
    <div class="row justify-content-center">
      <h1 class="text-white"><%= @count.title %></h1>
    </div>

    <div class="row justify-content-center">
      <p class="text-white display-1"><%= @count.number %></p>
    </div>

    <div class="row justify-content-center">
      <form action="/count-detail/<%= @count.id %>/plus" method="post">
        <button type="submit" class="btn btn-primary btn-block" style="width:500px">+</button>
      </form>


    </div>

    <div style="margin-top:30px; margin-bottom:300px">
      <ul class="list-inline">
      <% @countedusers.each do |count|  %>
        <li class="list-inline-item">
          <div>
            <img class="rounded-circle img-fluid" src="<%= count.user.img %>" style="width:100px; height:100px">
            <p class="text-center text-white"><%= count.user.name %></p>
          </div>

        </li>
      <% end %>
    </ul>


    </div>


  </div>


</div>
