<div class="container">
  <div class="row justify-content-center" style="margin-top:10px">

      <img src="<%= current_user.img %>"
       class="img-fluid rounded-circle" style="width:300px">


  </div>

  <div class="row justify-content-center">
    <div>
      <h1 class="display-4"><%= current_user.name %></h1>
    </div>
  </div>


  <ul class="list-inline">
		<% @counts.each do |count| %>

			<li class="list-inline-item counter">
				<div class="counter">

						<a href="/count/<%= count.id %>">
							<div class="image">
								<h1 class="text-white"><%= count.title %></h1>
									<p class="display-3 text-white"><%= count.number %></p>
							</div>

						</a>


						<form action="/count/<%= count.id %>>/plus" method="post">
								<button type="submit" class="btn-primary btn-block">+</button>
						</form>

				</div>


			</li>


		<% end %>

	</ul>



</div>
